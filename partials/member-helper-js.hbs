{{#if @member}}
    <script data-swup-reload-script>
        var memberPlan = "trainee";
        {{#if @member.paid}}
            {{#foreach @products visibility="all" as |product|}}
                {{#foreach @member.subscriptions as |sub|}}
                    {{#match sub.tier.slug "=" product.slug}}
                        {{#match sub.status "!=" "canceled"}}
        memberPlan = '{{product.name}}'.toLowerCase();
                        {{/match}}
                    {{/match}}
                {{/foreach}}
            {{/foreach}}
        {{/if}}

        $(document).ready(function() {
            // update page classes
            $('div.gh-page').addClass(`${memberPlan}`);
        });

    </script>
{{/if}}