{{#get "posts" limit="3" filter="tags:[{{post.tags}}]+id:-{{post.id}}+tag:-podcast" include="tags" as |related|}}
    {{#if related}}
        <section class="related-posts">
            <h3 class="related-title"><span class="text">You might also like...</span></h3>
            <div class="post-feed">
                {{#foreach related}}
                    {{> post-card square=true}}
                {{/foreach}}
            </div>
        </section>
    {{/if}}
{{/get}}
