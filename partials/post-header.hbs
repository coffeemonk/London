<header class="post-header{{#if big_title}} big-title{{/if}}{{#if single}} container medium{{/if}}">
    {{#if single}}
        <h1 class="title">{{title}}</h1>
    {{else}}
        <h2 class="title">
            <a class="link" href="{{url}}">{{title}}</a>
        </h2>
    {{/if}}
    {{^is "page"}}
        {{#unless hide_meta}}
            <div class="meta">
                <span class="item date">
                    <time datetime="{{date format="YYYY-MM-DD"}}">
                        {{#unless number_date}}
                            {{date published_at timeago="true"}}
                        {{else}}
                            {{date published_at}}
                        {{/unless}}
                    </time>
                </span>
                {{#if primary}}
                    <span class="item primary"><a href="{{primary.url}}">{{primary.name}}</a></span>
                {{/if}}
                {{#if reading_time}}
                    <span class="item length">
                        Read Time: {{reading_time minute="1 min" minutes="% mins"}}
                    </span>
                {{/if}}
            </div>
            {{#if tags}}
                <div class="item tags">
                    {{#foreach tags}}<a class="post-tag post-tag-{{slug}}" href="{{url}}" title="{{name}}">{{name}}</a>{{/foreach}}
                </div>
            {{/if}}
        {{/unless}}
    {{/is}}
</header>